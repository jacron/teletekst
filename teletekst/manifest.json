{
  "name": "Teletekst",
  "description": "ipv popup",
  "version": "1.0",
  "author": "Jan H Croonen",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://teletekst-data.nos.nl/*"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "icons" : {
    "128": "images/teletekst2 128.png",
    "48": "images/teletekst2 48.png",
    "16": "images/teletekst2 16.png"
  },
  "action": {
    "default_icon": "images/teletekst2 16.png",
    "default_title": "Teletekst",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Shift+MacCtrl+T"
      },
      "description": "Open de extensie"
    }
  },
  "manifest_version": 3
}
