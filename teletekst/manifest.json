{
  "name": "TeletekstView",
  "description": "Popup view op Teletekst",
  "version": "3.2",
  "author": "Jan H Croonen",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://teletekst-data.nos.nl/*"
  ],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "icons" : {
    "128": "images/teletekst2 128.png",
    "48": "images/teletekst2 48.png",
    "16": "images/teletekst2 16.png"
  },
  "action": {
    "default_icon": "images/teletekst2 16.png",
    "default_popup": "popup/view/popup.html?popup",
    "default_title": "Teletekst"
  },
  "options_ui": {
    "page": "options/options.html"
  },
  "commands": {
    "open-panel": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Shift+MacCtrl+T"
      },
      "description": "Open de extensie"
    }
  },
  "manifest_version": 3
}
